<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../styles/registerUser.css">

    <title>GatePass - Register User</title>
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand">Chandigarh University</a>
          <a href="/warden"><button type="button" class="btn btn-outline-primary">Home</button></a>
          
        </div>
      </nav>
      
      <% if(msg){ %> 
      <%- include('alertBar.ejs') %>
      <% } %> 

      <div class="container">

        <form class="row" method="post" action="/register">
            <div class="col-md-4">
              <label for="name" class="form-label">Enter Name</label>
              <input type="text" class="form-control" id="name" autocomplete="off" name="name">
            </div>
            <div class="col-md-4">
                <label for="contact" class="form-label">Enter mobile number</label>
                <input type="number" class="form-control" id="contact" name="contact">
            </div>

            <div class="col-md-4">
                <label for="room" class="form-label">Enter Room number</label>
                <input type="number" class="form-control" id="room" name="room">
            </div>

            <div class="col-md-4">
                <label for="parent-contact" class="form-label">Enter Parent's number</label>
                <input type="number" class="form-control" id="parent-contact" name="parent">
            </div>

            <div class="col-md-4">
                <label for="uid" class="form-label" name="uid">Enter UID</label>
                <input type="text" class="form-control" id="uid" name="uid">
            </div>

            <div class="col-md-4">
              <label for="mail" class="form-label" name="mail">Enter email adress</label>
              <input type="email" class="form-control" id="mail" name="mail">
          </div>

            <div class="col-md-4">
                <input type="hidden" name="image" value="none">
                <input type="hidden" name="group" value="NC5">
            </div>
            
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary col-md-3">Submit</button>
            </div>
            
          </form>

      </div>
   
    
</body>
</html>