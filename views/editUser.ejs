<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/manage-requests.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>GatePass - Edit User</title>
</head>
<body>
    
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand">Chandigarh University</a>
          <a href="/warden"><button type="button" class="btn btn-outline-primary">Home</button></a>
        </div>
      </nav>
      <% if(msg){ %> 
        <%- include('alertBar.ejs') %>
        <% } %> 
   <div class="container">

   
  
      <form method="post" action="/update-user-details">
        <div class="mb-3">
          <label class="form-label">Name</label>
          
          <input type="text" name="name" class="form-control" value="<%= name %> ">
        </div>
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="hidden" name="original" value="<%= uid %> ">
            <input type="text" name="uid" class="form-control"  value="<%= uid %>">
          </div>
          <div class="mb-3">
            <label class="form-label">Contact Number</label>
            <input type="text" name="contact" class="form-control"   value="<%= contact %> ">
          </div>
          <div class="mb-3">
            <label class="form-label">Parent's Contact Number</label>
            <input type="text" name="parent" class="form-control"  value="<%= parent %> ">
          </div>

          <div class="mb-3">
            <label class="form-label">Room number</label>
            <input type="text" name="room" class="form-control"  value="<%= room %> ">
          </div>

          <div class="mb-3">
            <label class="form-label">Hostel</label>
            <input type="text" name="hostel" class="form-control"  value="<%= hostel %> ">
          </div>


        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>



</body>
</html>