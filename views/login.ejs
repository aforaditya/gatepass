<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="user-scalable=0">
    <title>GatePass - Login</title>
    <link rel="stylesheet" href="styles/indexstyle.css">
</head>
<body onload="showMessage()">
  <% if(message) {%> 
  <div class="message">Please enter valid username and password</div>
  <% } %> 

    <div class="container">

        <form method="post" action="/login">
            <img style="height: 250px;"  src="https://upload.wikimedia.org/wikipedia/commons/b/b0/Chandigarh_University_Seal.png" alt="Logo">
            <h3>Sign in</h3>
            <p>Welcome back !  Sign in with your UID and password to continue</p>
            <input type="text" name="username"  placeholder="Enter UID">
            <input type="password" name="password"  placeholder="Enter Password">
            <button type="submit">Sign in</button>
            <a href="/forgotPassword">Forgot password?</a>
        </form>

        

    </div>
  <script>
      function showMessage(){
        if ('scrollRestoration' in history) {
    history.scrollRestoration = 'manual';
       }  
       window.scrollTo(0,0);

      }
  </script>
    
</body>
</html>